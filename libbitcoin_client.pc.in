prefix=@prefix@
exec_prefix=@exec_prefix@
libdir=@libdir@
includedir=@includedir@

Name: libbitcoin_client
Description: Client Protocol Implementation
URL: https://github.com/libbitcoin/libbitcoin_client
Version: @PACKAGE_VERSION@

# Our dependencies that publish package configuration.
Requires: libsodium >= 0.6.0 libbitcoin-protocol >= 0.0.1

# Our own include directory and any other compiler flags we require.
Cflags: -I${includedir} -std=c++11

# Our own lib and any we require that do not publish package configuration.
Libs: -L${libdir} -lbitcoin_client
